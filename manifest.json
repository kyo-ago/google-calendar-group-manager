{
	"name": "google-calendar-group-manager",
	"version": "0.0.1",
	"manifest_version": 2,
	"content_scripts" : [{
		"matches": ["<all_urls>"],
		"js" : [
			"/src/content_scripts.js"
		]
	}],
	"browser_action" : {
		"default_title": "google-calendar-group-manager",
		"default_popup": "/html/popup.html"
	},
	"oauth2": {
		"client_id": "390060771847-feqdi3ago40i2bhahjkn4illgeg0a168.apps.googleusercontent.com",
		"scopes": [
			"https://www.googleapis.com/auth/calendar"
		]
	},
	"background" : {
		"persistent": false,
		"scripts": [
			"/src/background.js"
		]
	},
	"permissions": [
		"tabs",
		"identity",
		"storage",
		"https://calendar.google.com/*",
		"contextMenus"
	]
}